        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="9dp" />
            <padding android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <gradient
            android:angle="#d5423d"
            android:centerColor="#dfaa55"
            android:centerX="#c0d558"
            android:centerY="#60d169"
            android:endColor="#0d8ad8"
            android:gradientRadius="#7a30d5"
            android:startColor="#c74d7e"/>
        </shape>

    </item>

</layer-list>